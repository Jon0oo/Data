<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_screen_slide_page.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/FrameLayoutTop2"
        android:layout_width="396dp"
        android:layout_height="175dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTintMode="add"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067">


        <ProgressBar
            android:id="@+id/ProgressBarData"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="387dp"
            android:layout_height="166dp"
            android:backgroundTint="?android:attr/textColorPrimaryNoDisable"

            android:max="100"
            android:min="0"
            android:progress="10"
            android:progressBackgroundTint="?android:attr/statusBarColor"

            android:progressTint="@color/blueAccent"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>