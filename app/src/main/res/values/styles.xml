<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Data1" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueAccent</item>
        <item name="colorPrimaryVariant">@color/blueAccentDark</item>
        <item name="colorOnPrimary">@color/blueAccent</item>
        <!-- Secondary brand color. -->

        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/BackgroundColorNight</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/FontColor</item>


    </style>

    <style name="Widget.Data.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Data.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>